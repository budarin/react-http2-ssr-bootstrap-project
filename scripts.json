[
    {
        "name": "start-client",
        "command": "webpack-dev-server --mode development --config ./src/config/client/webpack.config.babel.js",
        "env": {
            "NODE_ENV": "development"
        }
    },
    {
        "name": "server-compile",
        "command": "webpack --config ./src/config/server/webpack.config.babel.js",
        "env": {
            "NODE_ENV": "development"
        }
    },
    {
        "name": "server-monitoring",
        "command": "nodemon -w dist/server.js dist/server.js",
        "env": {
            "NODE_ENV": "development"
        }
    },
    {
        "name": "ensureServerIsCreated",
        "command": "npx babel-node ./src/tools/ensureServerIsCreated.js"
    },
    {
        "name": "start-server",
        "command":
            "prun ensureServerIsCreated && concurrently --kill-others \"prun server-compile\" \"prun server-monitoring\"",
        "env": {
            "NODE_ENV": "development"
        }
    },
    {
        "name": "server-build",
        "command": "webpack --config ./src/config/server/webpack.config.prod.babel.js",
        "env": {
            "NODE_ENV": "production"
        }
    },
    {
        "name": "client-build",
        "command": "webpack --config ./src/config/client/webpack.config.prod.babel.js",
        "env": {
            "NODE_ENV": "production"
        }
    },
    {
        "name": "build",
        "command": "rimraf ./.tmp && rimraf ./dist && webpack --config ./src/config/webpack.config.prod.babel.js",
        "env": {
            "NODE_ENV": "production"
        }
    },
    {
        "name": "upgrade",
        "command": "npx flow stop && ncu --upgradeAll && npm install && npx flow"
    },
    {
        "name": "flow-typed",
        "command": "npx flow-typed install --skip --overwrite"
    },
    {
        "name": "test",
        "command": "jest --notify --detectOpenHandles --no-cache",
        "env": {
            "BROWSER": true
        }
    },
    {
        "name": "test-watch",
        "command": "jest --watch --onlyChanged --notify --detectOpenHandles",
        "env": {
            "BROWSER": true,
            "SHOW_BROWSER": true
        }
    }
]
